# ===============
# Small Functions
# ===============

# Open associated CSI 3334 Project
# DEPRECATED
proj() {
    if [[ '$1' =~ ^[0-9]+$ ]]; then
        open -a 'Brave Browser' 'https://cs.baylor.edu/~hamerly/courses/3334_23f/project$1/'
    else
        echo 'Invalid Argument.'
    fi
}

