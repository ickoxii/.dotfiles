#!/usr/bin/env sh

# ⎧                                        ⎫
# ⎨     Examples                           ⎬
# ⎩                                        ⎭

# application specific bindings
#
# cmd -n [
#   "kitty"    : echo "hello kitty"
#   *          : echo "hello everyone"
#   "firefox"  : echo "hello browser"
#   "terminal" ~
#   "finder"   : false
# ]

# load additional config files"
# .load "/Users/ickoxii/.config/yabai/addtl_skhdrc"

# prevent skhd from monitoring events for specific applications
#
# .blacklist [
#   "kitty"
#   "terminal"
#   "firefox"
# ]

# open terminal
# cmd - return : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~

# open firefox
# cmd + shit - return : open -na /Applications/Firefox.app

# open a new space
# ctrl - return : yabai -m space --create

# destroy a space
# ctrl - x : yabai -m space --destroy

# ⎧                                        ⎫
# ⎨     Navigation                         ⎬
# ⎩                                        ⎭

# focus to specific spaces
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6

# move window to specific spaces
ctrl + shift - 1 : yabai -m window --space 1
ctrl + shift - 2 : yabai -m window --space 2
ctrl + shift - 3 : yabai -m window --space 3
ctrl + shift - 4 : yabai -m window --space 4
ctrl + shift - 5 : yabai -m window --space 5
ctrl + shift - 6 : yabai -m window --space 6


# ⎧                                        ⎫
# ⎨     Window Management                  ⎬
# ⎩                                        ⎭

# window focus
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# swap windows
cmd + shift - h : yabai -m window --swap west
cmd + shift - j : yabai -m window --swap south
cmd + shift - k : yabai -m window --swap north
cmd + shift - l : yabai -m window --swap east

# move window and split
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - l : yabai -m window --warp east

# window resize
alt - h : yabai -m window --resize left:-50:0
alt - j : yabai -m window --resize bottom:0:50
alt - k : yabai -m window --resize top:0:-50
alt - l : yabai -m window --resize right:50:0

# opposite side resize
alt + shift - h : yabai -m window --resize right:-50:0
alt + shift - j : yabai -m window --resize top:0:50
alt + shift - k : yabai -m window --resize bottom:0:-50
alt + shift - l : yabai -m window --resize left:50:0

# change focus to different monitors
alt + cmd - h : yabai -m display --focus west
alt + cmd - l : yabai -m display --focus east

# window rotations
alt - r : yabai -m space --rotate 90
shift + alt - r : yabai -m space --rotate 270

# flips
shift + alt - y : yabai -m space --mirror y-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# window centering
ctrl + alt - return : yabai -m window --toggle zoom-fullscreen

# balance windows
ctrl + alt + cmd - return : yabai -m space --balance

# move window to display
ctrl + alt + cmd - h : yabai -m window --display west; yabai -m display --focus west;
ctrl + alt + cmd - l : yabai -m window --display west; yabai -m display --focus west;

# move window to previous and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

# ⎧                                        ⎫
# ⎨                                        ⎬
# ⎩                                        ⎭
