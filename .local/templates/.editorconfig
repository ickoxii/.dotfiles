root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.sh]
indent_style = space
indent_size = 2

[*.{h,c,cpp,hpp}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[Makefile.c]
indent_style = tab
indent_size = 4
