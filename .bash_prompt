#!/usr/bin/env bash
# This file specifies a custom bash prompt
# The bash prompt is what prints before every command

# https://medium.com/@charlesdobson/how-to-customize-your-macos-terminal-7cce5823006e
# layout for prompt is 'name directory (git-branch) >> |'

# GIT FUNCTIONS
# these only print if inside a git repository
# this prints the current branch within parenthesis
git_branch() {
    git branch 2>/dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

# TERMINAL PROMPT
PS1="\[\e[0;91m\]\u\[\e[m\]"        # username
PS1+=" "                            # space
PS1+="\[\e[0;95m\]\W\[\e[m\]"       # current directory
PS1+="\[\e[0;96m\]\$(git_branch)\[\e[m\]"  # current branch
PS1+=" "                            # space
# print >> if normal user, $ if sudo
if [ "$EUID" -ne 0 ]; then
    PS1+=">> "
else
    PS1+="$ "
fi

# TURNS COLORS ON
export CLICOLOR=1
# CUSTOMIZES COLORS
export LSCOLORS=ExFxBxDxCxegedabagacad

export PS1;                         # display PS1 string
